{
  "manifest_version": 2,
  "name": "Readstack",
  "version": "1.0",

  "description": "",
  "homepage_url": "https://github.com/jlevesy/readstack/webextension",
  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Readstack",
    "default_popup": "popup/readstack.html"
  },

  "options_ui": {
    "page": "options/readstack-options.html",
    "browser_style": true
  }
}
